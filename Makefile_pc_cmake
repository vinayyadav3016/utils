#################################################################################
################ Static Settings NO changes to be done ##########################
BUILD_DIR =CMakeFiles
BIN_DIR   =bin
LIB_DIR   =lib
#################################################################################
################################ Build all ######################################
all: $(DIRS)
	cd $(BUILD_DIR) && cmake ../ && make
#################################################################################
################################## Make dirs ####################################
DIRS:
	mkdir -p $(BIN_DIR) $(LIB_DIR) $(BUILD_DIR)
#################################################################################
################################ Clean Build files ##############################
clean:
	cd $(BUILD_DIR) && make clean
#################################################################################
################################# Clean Build Dirs ##############################
cleanDir:
	rm -rf $(BUILD_DIR) $(BIN_DIR) $(LIB_DIR)
#################################################################################
##################################### Makedepend # ##############################
depend:
	echo "Depend"
#################################################################################
.PHONY: clean cleanDir
